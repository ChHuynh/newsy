
<h1><%=@articles.first.provider.name%></h1>

<br>
<ul>
  <% @articles.each do |article|  %>
     <li>
      <a href="<%=article.url %>"> <%=  article.title  %> </a>
      <br>
      <%= article.description %>
      <br>
      <%= article.publish_date.in_time_zone("Pacific Time (US & Canada)").strftime('%B %-d, %Y %l:%M%P %Z')%>


    </li>
    <br>
    <% end %>
  </ul>
